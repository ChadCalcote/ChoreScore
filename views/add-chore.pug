include includes/utils.pug 
if (choreErrors)
  +choreValidationErrorSummary(choreErrors)
form(action="/chores/create", method="post" class="chore-form")
  div(class="add-chore__heading") Add a Chore
  +field("add-chore__name add-chore__div", "Chore Name", "choreName", chore.choreName)(placeholder="Name your chore!")
  +field("add-chore__point add-chore__div", "Point Value", "value", chore.value, "number")(placeholder="ex. 100")
  div(class="add-chore__note add-chore__div")
    label(for="note") Note
    textarea(id="note", name="note", cols="30", rows="10", placeholder="Add some more details about your chore here...")
  +field("add-chore__date add-chore__div", "Due Date", "dueDate", chore.dueDate, "text")(placeholder="ex. 2020-01-01")
  div(class="add-chore__select-wrapper")
    div(class="add-chore__select-container")
      label(class="add-chore__select-label") Type
      select(name='choreTypeId' class="add-chore__options")
        option(value=1) Household
        option(value=2) Work
        option(value=3) Errand
        option(value=4) Other
    div(class="add-chore__select-container")
      label(class="add-chore__select-label") List
      select(name='listId' class="add-chore__options")
        each listItem in lists
          option(value=listItem.id) #{listItem.listName}
  button(type="submit" class="add-chore__submit") Create Chore
