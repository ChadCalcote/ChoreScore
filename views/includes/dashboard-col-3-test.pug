include utils.pug
div(class="dashboard-grid-container__dashboard-column-3 columns")
    button(class="chore__edit") Edit
    div(class="chore__display")
        div(class="chore__buttons-container ")
            button(class="chore__save") Save
            button(class="chore__cancel") Cancel
        div(class="chore__due")
            span Due
            p= chore.dueDate
        div(class="chore__list")
            span List
            p= chore.Lists.listName
        div(class="chore__type")
            span Type
            p= chore.ChoreTypes.choreType
        div(class="chore__note")
            span Note
            p= chore.note
        div(class="chore__point")
            span Point Value
            p= chore.value
        button(class="chore__complete") Complete
    







